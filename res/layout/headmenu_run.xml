<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headmenuofall"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/head_blue" >

    <LinearLayout 
        android:id="@+id/topl_run"
        android:layout_width="wrap_content"
        android:layout_height="90dp">     
        <ImageButton 
            android:id="@+id/toplib_run"
            android:layout_width="32dp"
            android:layout_height="23dp"
            android:layout_marginLeft="31dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/leftmenu_icon"
            android:background="@null"
            android:scaleType="centerCrop"/>     
    </LinearLayout>
    
    <TextView
        android:id="@+id/topl2_run"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/topl_run"
        android:layout_marginLeft="28dp"
        android:gravity="center_vertical"
        android:textSize="36sp"
        android:textColor="#FFF"/>
    
    <LinearLayout 
        android:id="@+id/topr"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_height="90dp">     
        <ImageButton 
            android:id="@+id/toprib"
            android:layout_width="44dp"
            android:layout_height="41dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/home"
            android:background="@null"
            android:scaleType="centerCrop"/>     
    </LinearLayout>
    
</RelativeLayout>
