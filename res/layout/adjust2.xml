<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/leftmenuofcontrol"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cpc1_adjust"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="CPC1"
                android:textColor="@color/textColor_gray"
                android:textSize="22sp" />

            <Button
                android:id="@+id/cpc2_adjust"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="CPC2"
                android:textColor="@color/textColor_gray"
                android:textSize="22sp" />

            <Button
                android:id="@+id/cpc3_adjust"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="CPC3"
                android:textColor="@color/textColor_gray"
                android:textSize="22sp" />

            <Button
                android:id="@+id/cpc4_adjust"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="CPC4"
                android:textColor="@color/textColor_gray"
                android:textSize="22sp" />
            
            <Button
                android:id="@+id/cpc5_adjust"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="CPC5"
                android:textColor="@color/textColor_gray"
                android:textSize="22sp" />
            
            <Button
                android:id="@+id/cpc6_adjust"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="CPC6"
                android:textColor="@color/textColor_gray"
                android:textSize="22sp" />
        </LinearLayout>

      	<ListView
        	android:id="@+id/listView_adjust"
        	android:layout_marginTop="22dp"
        	android:layout_marginLeft="25dp"
          	android:layout_marginRight="25dp"
     		android:layout_width="match_parent"
          	android:layout_height="wrap_content" >
	</ListView>

    </LinearLayout>

    <Button
        android:id="@+id/adjust_save"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@color/green"
        android:text="查看调光结果"
        android:textColor="@color/white"
        android:textSize="30sp" />

</LinearLayout>