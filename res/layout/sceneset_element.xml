<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:src="@drawable/checkbox_off" />

        <ImageView
            android:id="@+id/isenable_sceneset"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:src="@drawable/checkbox_on"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/TnNo_sceneset"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="66dp"
            android:gravity="center_horizontal"
            android:text="1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/subclNo_sceneset"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="176dp"
            android:gravity="center_horizontal"
            android:text="2"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/spcefunc_sceneset"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="295dp"
            android:gravity="center_horizontal"
            android:text="无特殊要求"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/para_sceneset"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="480dp"
            android:gravity="center_horizontal"
            android:text="输入参数"
            android:textColor="@color/textbody_black"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>